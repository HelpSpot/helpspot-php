{
    "name": "HelpSpot/HelpSpot",
    "type": "library",
    "description": "A PHP wrapper for the HelpSpot help desk api",
    "keywords": [
        "HelpSpot",
        "HelpSpot"
    ],
    "homepage": "https://github.com/HelpSpot/HelpSpot",
    "license": "MIT",
    "authors": [
        {
            "name": "Ian Landsman",
            "email": "ianlandsman@userscape.com",
            "homepage": "https://userscape.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : "~5.6|~7.0",
        "ext-simplexml": "*",
        "guzzlehttp/guzzle": "^6.2",
    },
    "require-dev": {
        "phpunit/phpunit" : "~4.0||~5.0",
        "squizlabs/php_codesniffer": "^2.3"
    },
    "autoload": {
        "psr-4": {
            "HelpSpot\\HelpSpot\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "HelpSpot\\HelpSpot\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests",
        "fix-style": "phpcbf -p --standard=PSR2 --runtime-set ignore_errors_on_exit 1 --runtime-set ignore_warnings_on_exit 1 src tests"
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    },
    "config": {
        "sort-packages": true
    }
}
